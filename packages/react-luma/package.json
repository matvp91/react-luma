{
  "name": "react-luma",
  "version": "1.0.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "peerDependencies": {
    "react": "^16.14.0"
  },
  "devDependencies": {
    "@react-luma/tsconfig": "workspace:*",
    "@types/node": "^18.11.15",
    "@types/react": "^18.0.26",
    "@types/react-reconciler": "0.18.0",
    "@types/yoga-layout": "^1.9.4",
    "esbuild": "^0.16.7",
    "tsup": "^6.5.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@react-pdf/yoga": "^3.0.0",
    "performance-now": "^2.1.0",
    "pixi.js": "^7.0.5",
    "react-reconciler": "0.23.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": {
      "resolve": true
    },
    "splitting": true,
    "clean": true
  }
}
